            // (من كودك) تأثير الظهور عند النزول
            const revealElements = document.querySelectorAll('.reveal');
            const revealObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                threshold: 0.1
            });
            revealElements.forEach(element => {
                revealObserver.observe(element);
            });

            // (من كودك) تغيير خلفية الـ Navbar
            const navbar = document.querySelector('.navbar');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    navbar.style.boxShadow = '0 5px 20px rgba(0, 0, 0, 0.1)'; 
                    navbar.style.backgroundColor = 'var(--bg-navbar-scrolled)'; 
                    navbar.style.padding = '1rem 5%';
                } else {
                    navbar.style.boxShadow = 'none';
                    navbar.style.backgroundColor = 'var(--bg-navbar)'; 
                    navbar.style.padding = '1.5rem 5%';
                }
            });
            
            /* (ملغي) تم إلغاء لوجيك معرض الصور */
            
            /* (ملغي) تم إلغاء لوجيك النزول الأفقي */

            // (معدل) لوجيك تبديل الثيم
            function initThemeToggle() {
                // (معدل) استهداف الكلاس بدلاً من الأي دي
                const toggleBtns = document.querySelectorAll('.theme-toggle-btn'); 
                const html = document.documentElement;
                
                if (toggleBtns.length === 0 || !html) return;

                const storedTheme = localStorage.getItem('theme');
                if (storedTheme === 'dark') {
                    html.classList.add('dark');
                }
                
                const toggleTheme = () => {
                    if (html.classList.contains('dark')) {
                        html.classList.remove('dark');
                        localStorage.setItem('theme', 'light');
                    } else {
                        html.classList.add('dark');
                        localStorage.setItem('theme', 'dark');
                    }
                };

                // (معدل) إضافة المستمع لكل الأزرار
                toggleBtns.forEach(btn => btn.addEventListener('click', toggleTheme));
            }
            initThemeToggle();
            
            // (معدل) لوجيك قائمة الهامبرغر مع زر الإغلاق
            function initMobileMenu() {
                const menuToggle = document.getElementById('menu-toggle');
                const mobileNav = document.getElementById('mobile-nav');
                const mobileLinks = document.querySelectorAll('.mobile-nav-link');
                const menuClose = document.getElementById('menu-close-btn'); // (جديد)

                if (!menuToggle || !mobileNav || !menuClose) return; // (معدل)
                
                // (معدل) دالة الإغلاق المحدّثة
                const closeNav = () => {
                    mobileNav.classList.remove('active');
                    menuToggle.setAttribute('aria-expanded', 'false');
                };
                
                // (معدل) دالة الفتح/الإغلاق
                menuToggle.addEventListener('click', () => {
                    const open = mobileNav.classList.toggle('active');
                    menuToggle.setAttribute('aria-expanded', open);
                });
                
                // (جديد) زر الإغلاق
                menuClose.addEventListener('click', closeNav);
                
                // (معدل) إغلاق عند الضغط على رابط
                mobileLinks.forEach(link => {
                    link.addEventListener('click', closeNav);
                });
                
                // (جديد) إغلاق عند الضغط على Escape
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape' && mobileNav.classList.contains('active')) {
                        closeNav();
                    }
                });
            }
            initMobileMenu();

            // (جديد) لوجيك تبديل اللغة
            function initLanguageToggle() {
                const langToggleBtns = document.querySelectorAll('.lang-toggle-btn');
                const htmlEl = document.documentElement;
                
                if (langToggleBtns.length === 0) return;

                const setLanguage = (lang) => {
                    if (!['ar', 'en'].includes(lang)) return;

                    htmlEl.lang = lang;
                    htmlEl.dir = (lang === 'ar') ? 'rtl' : 'ltr';
                    localStorage.setItem('lang', lang);

                    // تحديث نصوص الأزرار
                    langToggleBtns.forEach(btn => {
                        btn.textContent = translations[lang].lang_toggle_text;
                    });

                    // تحديث كل النصوص في الصفحة
                    document.querySelectorAll('[data-lang-key]').forEach(el => {
                        const key = el.dataset.langKey;
                        const translation = translations[lang][key];

                        if (translation) {
                            // (جديد) التعامل مع النصوص التي تحتوي على HTML (مثل **أمجد**)
                            // (معدل) التأكد من أن المفاتيح موجودة قبل تطبيق الـ innerHTML
                            if (key === 'about_p1' || key === 'about_p2' || key === 'p2_desc') {
                                 el.innerHTML = translation.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
                            }
                            // (جديد) التعامل مع Placeholders
                            else if (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA') {
                                el.placeholder = translation;
                            } 
                            // (جديد) التعامل مع title
                            else if (el.tagName === 'TITLE') {
                                el.textContent = translation;
                            }
                            // (جديد) التعامل مع title الخاص بالروابط
                            else if (el.classList.contains('social-link')) {
                                el.title = translation;
                            }
                            // النصوص العادية
                            else {
                                el.textContent = translation;
                            }
                        }
                    });
                };

                // 1. تحميل اللغة عند فتح الصفحة
                let currentLang = localStorage.getItem('lang') || 'ar'; // الافتراضي عربي
                setLanguage(currentLang);

                // 2. إضافة المستمع لأزرار اللغة
                langToggleBtns.forEach(btn => {
                    btn.addEventListener('click', () => {
                        currentLang = (htmlEl.lang === 'ar') ? 'en' : 'ar';
                        setLanguage(currentLang);
                    });
                });
            }

            initLanguageToggle();

        });
    </script>
</body>
</html>
